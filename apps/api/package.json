{
  "name": "@repo/api",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @repo/api --parallel \"/^dev:.*/\"",
    "dev:tsc": "tsc -w -p ./tsconfig.client.json",
    "dev:wrangler": "wrangler dev",
    "build": "tsc -p ./tsconfig.client.json",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings src/worker-env.d.ts",
    "lint": "eslint .",
    "test": "vitest run",
    "db:generate": "drizzle-kit generate",
    "db:apply": "wrangler d1 migrations apply DB"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.2",
    "hono": "^4.7.11"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.38",
    "@repo/eslint": "workspace:*",
    "@repo/typescript": "workspace:*",
    "@types/node": "^24.0.3",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.29.0",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.3",
    "wrangler": "^4.20.3"
  },
  "exports": {
    "./client": {
      "import": {
        "types": "./dist/client.d.ts",
        "default": "./dist/client.js"
      }
    }
  }
}
