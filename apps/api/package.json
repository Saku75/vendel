{
  "name": "@app/api",
  "private": true,
  "version": "0.1.5",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @app/api --parallel \"/^dev:.*/\"",
    "dev:ts": "tsdown --watch ./src",
    "dev:wrangler": "wrangler dev",
    "build": "tsdown",
    "deploy": "wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings src/worker-env.d.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "db:generate": "drizzle-kit generate",
    "db:apply": "wrangler d1 migrations apply DB"
  },
  "dependencies": {
    "@package/crypto-utils": "workspace:*",
    "@package/mail-service": "workspace:*",
    "@package/token-service": "workspace:*",
    "@package/validators": "workspace:*",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.1",
    "ky": "^1.14.1",
    "set-cookie-parser": "^2.7.2",
    "zod": "^4.2.0"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.15",
    "@config/eslint": "workspace:*",
    "@config/typescript": "workspace:*",
    "@types/node": "^24.10.4",
    "@types/set-cookie-parser": "^2.4.10",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "tsdown": "^0.15.12",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "wrangler": "^4.54.0"
  },
  "exports": {
    "./client": {
      "import": {
        "types": "./dist/client/index.d.ts",
        "default": "./dist/client/index.js"
      }
    },
    "./enums": {
      "import": {
        "types": "./dist/enums/index.d.ts",
        "default": "./dist/enums/index.js"
      }
    },
    "./types": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/types/index.js"
      }
    }
  }
}
