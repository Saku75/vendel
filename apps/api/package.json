{
  "name": "@app/api",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @app/api --parallel \"/^dev:.*/\"",
    "dev:tsup": "tsup --watch",
    "dev:wrangler": "wrangler dev",
    "build": "tsup",
    "deploy": "wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings src/worker-env.d.ts",
    "lint": "eslint .",
    "test:watch": "vitest",
    "db:generate": "drizzle-kit generate",
    "db:apply": "wrangler d1 migrations apply DB"
  },
  "dependencies": {
    "@noble/hashes": "^1.8.0",
    "@package/mail": "workspace:*",
    "@package/token": "workspace:*",
    "@package/validators": "workspace:*",
    "@paralleldrive/cuid2": "^2.2.2",
    "@scure/base": "^1.2.6",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.8.3",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.47",
    "@package/eslint": "workspace:*",
    "@package/typescript": "workspace:*",
    "@types/node": "^24.0.4",
    "drizzle-kit": "^0.31.2",
    "eslint": "^9.29.0",
    "tsc-alias": "^1.8.16",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "wrangler": "^4.22.0"
  },
  "exports": {
    "./client": {
      "import": {
        "types": "./dist/lib/client/index.d.ts",
        "default": "./dist/lib/client/index.js"
      }
    },
    "./schema": {
      "import": {
        "types": "./dist/lib/database/schema/*.d.ts",
        "default": "./dist/lib/database/schema/*.js"
      }
    }
  }
}
