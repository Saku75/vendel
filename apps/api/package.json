{
  "name": "@vendel/api",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @vendel/api --parallel \"/^dev:.*/\"",
    "dev:tsc": "tsc -w",
    "dev:wrangler": "wrangler dev",
    "build": "tsc",
    "deploy": "wrangler deploy --minify",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "cf-typegen": "wrangler types --env-interface WorkerEnv src/worker-env.d.ts",
    "db:generate": "drizzle-kit generate",
    "db:apply": "wrangler d1 migrations apply"
  },
  "dependencies": {
    "@noble/ciphers": "^1.2.1",
    "@paralleldrive/cuid2": "^2.2.2",
    "@vendel/token": "workspace:*",
    "drizzle-orm": "^0.41.0",
    "hono": "^4.7.6",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.8",
    "@vendel/eslint-config": "workspace:*",
    "drizzle-kit": "^0.30.6",
    "typescript": "^5.8.3",
    "wrangler": "^4.9.1"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/main.d.ts",
        "default": "./dist/main.js"
      }
    }
  }
}
