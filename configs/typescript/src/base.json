{
  "$schema": "https://www.schemastore.org/tsconfig",
  "compilerOptions": {
    "noEmit": true,

    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],

    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,

    "declaration": true,
    "declarationMap": true
  },
  "include": ["${configDir}/src"],
  "exclude": ["${configDir}/dist", "${configDir}/node_modules"]
}
