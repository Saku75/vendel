{
  "$schema": "https://www.schemastore.org/tsconfig",
  "compilerOptions": {
    "noEmit": true,

    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],

    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",

    "declaration": true,
    "declarationMap": true
  },
  "exclude": ["./dist/**", "./node_modules/**"]
}
