{
  "$schema": "./node_modules/turbo/schema.json",
  "ui": "tui",

  "globalPassThroughEnv": ["CLOUDFLARE_ACCOUNT_ID", "CLOUDFLARE_API_TOKEN"],

  "tasks": {
    "dev": {
      "with": ["@app/api#dev"],
      "dependsOn": ["cf-typegen", "^build"],
      "persistent": true,
      "cache": false
    },
    "build": {
      "dependsOn": ["cf-typegen", "^build"],
      "outputs": ["./dist/**", "./.svelte-kit/**"],
      "env": ["CLOUDFLARE_ENV"]
    },

    "deploy": {
      "dependsOn": ["build"]
    },

    "cf-typegen": {
      "inputs": ["./wrangler.json", "./.dev.vars"],
      "outputs": ["./src/worker-env.d.ts"]
    },

    "lint": {
      "dependsOn": ["cf-typegen", "^build"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "test:watch": {
      "dependsOn": ["^build"]
    },

    "db:apply": {
      "inputs": [
        "./src/lib/server/database/migrations/**",
        "./src/lib/database/migrations/**"
      ]
    }
  }
}
