{
  "$schema": "./node_modules/turbo/schema.json",
  "ui": "tui",
  "tasks": {
    "dev": {
      "dependsOn": ["build"],
      "persistent": true,
      "cache": false
    },
    "build": {
      "dependsOn": ["cf-typegen", "^build"],
      "outputs": ["dist/**"]
    },

    "deploy": {
      "dependsOn": ["build"],
      "env": ["CLOUDFLARE_ACCOUNT_ID", "CLOUDFLARE_API_TOKEN"]
    },

    "cf-typegen": {
      "inputs": ["wrangler.json"],
      "outputs": ["src/worker-env.d.ts"]
    },

    "lint": {
      "dependsOn": ["build"]
    },
    "test": {
      "dependsOn": ["build"]
    }
  }
}
