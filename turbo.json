{
  "$schema": "./node_modules/turbo/schema.json",
  "ui": "tui",

  "globalDependencies": ["pnpm-lock.yaml"],
  "globalPassThroughEnv": ["CLOUDFLARE_ACCOUNT_ID", "CLOUDFLARE_API_TOKEN"],

  "tasks": {
    "dev": {
      "dependsOn": ["cf-typegen", "^build"],
      "with": ["@app/api#dev"],
      "persistent": true,
      "interactive": true,
      "cache": false
    },

    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "static/**",
        "tsconfig.json",
        "tsdown.config.ts",
        "vite.config.ts",
        "svelte.config.js",
        "wrangler.json",
        "!src/**/*.spec.ts",
        "!src/**/*.test.ts"
      ],
      "outputs": ["./dist/**", "./.svelte-kit/**"],
      "env": ["CLOUDFLARE_ENV"]
    },

    "deploy": {
      "dependsOn": ["build"]
    },

    "cf-typegen": {
      "inputs": ["./wrangler.json", "./.dev.vars"],
      "outputs": ["./src/worker-env.d.ts"]
    },

    "lint": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "eslint.config.js", "tsconfig.json"],
      "outputs": []
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "eslint.config.js", "tsconfig.json"],
      "outputs": [],
      "cache": false
    },

    "test": {
      "dependsOn": ["^build"],
      "persistent": true,
      "interactive": true,
      "cache": false
    },
    "test:run": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "vitest.config.ts", "tsconfig.json"],
      "outputs": []
    },

    "db:generate": {
      "inputs": [
        "./drizzle.config.ts",
        "./src/lib/database/**",
        "!./src/lib/database/migrations/**"
      ],
      "cache": false
    },
    "db:apply": {
      "inputs": ["./drizzle.config.ts", "./src/lib/database/migrations/**"],
      "cache": false
    }
  }
}
